
<section class="create-form-container">

    <form method="post">
        <h3>Create Book Review</h3>
        <label>Title</label>
        <input type="text" name="title" class="box" value="{{title}}">
        <label>Author</label>
        <input type="text" name="author" class="box" value="{{author}}">
        <label>Genre</label>
        <input type="text" name="genre" class="box" value="{{genre}}">
        <label>Stars</label>
        <input type="number" name="stars" class="box" value="{{stars}}">
        <label>Image</label>
        <input type="text" name="image" class="box" value="{{image}}">
        <label>Review</label>
        <textarea class="box" name="review">{{review}}</textarea>
        <input type="submit" value="Create" class="btn">
    </form>
</section>
